
<div class="container">
  <div class="row">
    <div class="col-xs-offset-2 col-xs-8 col-xs-offset-2">
      <h3><span class="label label-default">管理者ログイン</span></span></h1>


      <%#= form_with model:@admin, url: admins_admin_session_path, id: 'new_admin', class: 'new_admin', local: true do |f| %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="form-group admin_email">
          <label class="col-xs-3 text-right">メールアドレス</label>
          <div class="col-xs-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group admin_password">
          <label class="col-xs-3 text-right">パスワード</label>
          <div class="col-xs-9">
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>
      </div>

        <%# if devise_mapping.rememberable? %>
          <!--<div class="field">-->
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me %>
          <!--</div>-->
        <%# end %>

        <div class="admin_login_btn">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      <% end %>
      <%= render "admins/shared/links" %>
    </div>
  </div>
</div>
