 <h3><span class="label label-default">会員一覧</span></h1>

 <table>
   <tr>
     <th>購入者</th>
     <td><%= link_to @order.customer.last_name + @order.customer.first_name,  admins_customer_path(@order.customer_id) %></td>
   </tr>

   <tr>
     <th>配送先</th>
     <td>
       〒<%= @order.postal_code %>
       <%= @order.address %><br>
       <%= @order.customer.last_name + @order.customer.first_name %>
      </td>
   </tr>

   <tr>
     <th>支払方法</th>
     <td><%= @order.payment_method %></td>
   </tr>

   <tr>
     <th>注文ステータス</th>
     <td></td>
     <td></td>
   </tr>
 </table>



  <table>
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
        <th>制作ステータス</th>
      </tr>
    </thead>

   <% @order.order_items.each do |order_item| %>
    <tbody>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.tax_in_purchased_price %></td>
        <td><%= order_item.count %></td>
        <td><%= order_item.tax_in_purchased_price * order_item.count %></td>
        <td></td>
      </tr>
    </tbody>
    <% end %>
  </table>