<h3><span class="label label-default">会員一覧</span></h1>


<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"),  admins_order_path(order.id), data: {"turbolinks" => false} %></td>
      <td><%= order.customer.last_name + order.customer.first_name %></td>
      <td><%= order.order_items.sum(:count) %></td>
      <td><%= order.order_status_i18n %></td>
    </tr>
  </tbody>
  <% end %>
</table>
