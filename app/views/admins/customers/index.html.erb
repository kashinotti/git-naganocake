<div class="container">
  <h3><span class="label label-default">会員一覧</span></h1>

  <table class="admins-customer-index-table table-bordered">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>

  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.last_name + customer.first_name, admins_customer_path(customer.id) %></td>
      <td><%= customer.email %></td>
      <td><%= customer.is_deleted %></td>
    </tr>
  <% end %>
  </table>

  <div class="admins-items-paginate text-center">
    <%= paginate @customers %>
  </div>
</div>
