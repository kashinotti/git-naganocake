<div class="container">
  <h3><span class="label label-default"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</span></h1>

  <%= form_with model:@customer, url: admins_customer_path, local:true do |f| %>

    <table class="admins-customer-edit-table">
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>

      <tr>
        <th>氏名</th>
        <td>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </td>
      </tr>

      <tr>
        <th>フリガナ</th>
        <td>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </td>
      </tr>

      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>

      <tr>
        <th>住所</th>
        <td><%= f.text_field :address, size: 50 %></td>
      </tr>

      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
      </tr>

      <tr>
        <th>会員ステータス</th>
        <td>
          <%= f.radio_button :is_deleted, FALSE %> 有効
          <%= f.radio_button :is_deleted, TRUE %> 無効
        </td>
      </tr>

      </table>
      <%= f.submit '変更を保存する', class: "btn btn-primary" %>
    <% end %>
</div>