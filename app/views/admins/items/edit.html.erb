<h2>商品編集</h2>

<div class="edit_image">
<%= attachment_image_tag @item, :image_id, format: 'jpg', class: "pull-left profile-img",, size: "80x80" %>
</div>


<%= form_with model:@item, url: admins_item_path, local:true do |f| %>

<div class="edit_name">
  <tr>
    <td>
      商品名
    </td>
    <td>
      <%= f.text_field :name %>
    </td>
  </tr>
</div>

<div class="edit_introduction">
  <tr>
    <td>
      商品説明
    </td>
    <td>
      <%= f.text_area :introduction %>
    </td>
  </tr>
</div>

<!--<div class="edit_genre">-->
