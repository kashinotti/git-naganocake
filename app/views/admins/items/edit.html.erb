<!--      ジャンル-->
<!--    </td>-->
<!--    <td>-->
      <%#= f.text_ :genre %>
<!--    </td>-->
<!--  </tr>-->
<!--</div>-->

<div class="edit_non_taxed_price">
  <tr>
    <td>
      税抜価格
    </td>
    <td>
      <%= f.text_field :non_taxed_price %>
    </td>
  </tr>
</div>

<div class="edit_is_active">
  <tr>
    <td>
      販売ステータス
    </td>
    <td>
      <%= f.select :is_active, [['販売中', true], ['売切', false]] %>
    </td>
  </tr>
</div>


<div class="item_submit">
    <%= f.submit '変更を保存' %>
</div>