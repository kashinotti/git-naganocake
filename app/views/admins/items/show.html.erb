<h2>商品詳細</h2>

<div class="item_show">
   <%= attachment_image_tag @item, :image_id, format: 'jpg', class: "pull-left profile-img",, size: "80x80" %>
   <table>
     <tr>
       <td>商品名</td>
       <td><%= @item.name %></td>
     </tr>

      <tr>
       <td>商品説明</td>
       <td><%= @item.introduction %></td>
     </tr>

      <tr>
       <td>ジャンル</td>
       <td><%= @item.genre %></td>
     </tr>

      <tr>
       <td>税込価格(税抜単価)</td>
       <td><%= puts @item.non_taxed_price * 1.10 %>(<%= @item.non_taxed_price %>)円</td>
     </tr>

      <tr>
       <td>販売ステータス</td>
       <td><%= @item.is_active %></td>
     </tr>
   </table>
</div>