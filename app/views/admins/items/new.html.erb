<%= form_with model:@item, url: admins_items_path, local:true do |f| %>

  <div class="item_name">
    <h4>商品名</h4>
    <%= f.text_field :name %>
  </div>

  <div class="item_introduction">
    <h4>商品説明</h4>
    <%= f.text_area :introduction %>
  </div>

  <!--<div class="item_genre">-->
  <!--  <h4>ジャンル</h4>-->
  <!--</div>-->

  <div class="item_non_taxed_price">
    <h4>税抜価格</h4>
    <%= f.text_field :non_taxed_price %>
  </div>

  <div class="item_is_active">
    <h4>販売ステータス</h4>
    <%= f.select :is_active, [['販売中', true], ['売切', false]] %>
  </div>

  <div class="item_submit">
    <%= f.submit '新規登録' %>
  </div>

<% end %>