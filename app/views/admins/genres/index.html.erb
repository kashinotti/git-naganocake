<h3><span class="label label-default">ジャンル一覧・追加</span></h1>

<%= form_with model:@genre, url: admins_genres_path, local:true do |f| %>

  <label>
    ジャンル
    <%= f.text_field :name %>
  </label>

  <label>
    <%=f.radio_button :is_active, TRUE %> 有効
  </label>

  <label>
    <%=f.radio_button :is_active, FALSE %> 無効
  </label>

  <%= f.submit '追加', class: "btn btn-primary" %>

<% end %>


<table>
  <tr>
    <th>ジャンル</th>
    <th>状態</th>
    <th></th>
  </tr>

<% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= genre.is_active %></td>
    <td><%= link_to '編集する', edit_admins_genre_path(genre.id), class: "btn btn-primary" %></td>
  </tr>
<% end %>
</table>