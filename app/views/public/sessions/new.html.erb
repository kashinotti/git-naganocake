
<div class="container">
<h4><span class="label label-default">会員の方はこちらからログイン</span></h1>

<div class="customer_login_form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
      <div class="cus_field">
        <label class="col-xs-2">メールアドレス</label>
        <div class="col-xs-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="cus_field">
        <label class="col-xs-2">パスワード</label>
        <div class="col-xs-4">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
    </div>

</div>

  <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!--</div>-->
  <%# end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary center-block" %>
  </div>
<% end %>

<h4><span class="label label-default">登録がお済みでない方</span></h1>
  <p>
    <%= link_to "こちら", new_customer_registration_path %>から新規登録をしてください。
  </p>

<%= render "public/shared/links" %>
