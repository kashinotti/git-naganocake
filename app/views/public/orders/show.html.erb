<div class="container">
  <h3><span class="label label-default">注文履歴詳細</span></span></h1>

  <div class="order-show-info">
  <div class="order-show">

    <h5>注文情報</h5>

    <table class="order-show-table table-bordered">
      <tr>
        <th>注文日</th>
        <td> <%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>

      <tr>
        <th>配送先</th>
        <td>
          <%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>

      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>

      <tr>
        <th>ステータス</th>
        <td><%= @order.order_status %></td>
      </tr>
    </table>
  </div>

  <div class="payment-info">
  <h5>請求情報</h5>
  <table class="payment-info-table table-bordered">
    <tr>
      <th>商品合計</th>
      <td><%= @order.total_payment %></td>
    </tr>

    <tr>
      <th>配送料</th>
      <td>800</td>
    </tr>

    <tr>
      <th>ご請求額</th>
      <td><%= @order.total_payment + 800 %></td>
    </tr>
  </table>
  </div>
  </div>

  <div class="order-content">
    <h5>注文内容</h5>
    <table class="order-content-table table-bordered">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>

      <% @order_items.each do |order_item| %>
      <tbody>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.tax_in_purchased_price %></td>
          <td><%= order_item.count %></td>
          <td><%= order_item.tax_in_purchased_price * order_item.count %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>