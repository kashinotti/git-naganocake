<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <h2>ジャンル検索</h2>
    </div>
    <div class="col-xs-8">
      <div class="items_title">
        <h1>商品一覧</h1>
        <p>(全<%= @items.count %>件)</p>
      </div>

      <div class="items_list">
        <% @items.each do |item| %>
          <%= attachment_image_tag item, :image, format: 'jpg', class: "pull-left profile-img", size: "150x100" %>
          <%= link_to item.name, item_path(item.id) %>
          <p>¥<%= item.non_taxed_price %></p>
        <% end %>
      </div>

    </div>
  </div>
</div>