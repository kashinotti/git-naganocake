<div class="container">
  <div class="row">
    <div class="col-xs-4">
       <table class="customer-item-genre table-bordered">
        <tr>
          <th>ジャンル検索</th>
        </tr>

        <tr>
          <td>
            <% @genres.each do |genre| %>
            <ul>
              <li>
                <%= genre.name %>
              </li>
            </ul>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-xs-8">
      <div class="items_title">
        <h1>商品一覧</h1>
        <p>(全<%= (@items.count).round %>件)</p>
      </div>

      <div class="items_list">
        <% @items.each do |item| %>
          <ul>
            <li>
              <%= attachment_image_tag item, :image, format: 'jpg', class: "profile-img", size: "150x100" %>
            </li>
            <li>
              <%= link_to item.name, item_path(item.id) %>
            </li>
            <li>
              ¥<%= item.non_taxed_price %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>

  <div class="text-center">
    <%= paginate @items %>
  </div>

</div>