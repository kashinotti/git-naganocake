
<div class="container">
  <h2>新規会員登録</h2>

   <%= form_with model:@customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

   <div class="registrations_form row">
    <label class="col-xs-3">名前</label>
    <div class="field col-xs-9">
      <label>(姓)</label>
      <%= f.text_field :last_name, autofocus: true  %>
      <label class="first_name_label">(名)</label>
      <%= f.text_field :first_name %>
    </div>
   </div>

   <div class="registrations_form row">
    <label class="col-xs-3">フリガナ</label>
    <div class="field col-xs-9">
      <label>(セイ)</label>
      <%= f.text_field :last_name_kana %>
      <label class="first_name_label">(メイ)</label>
      <%= f.text_field :first_name_kana %>
    </div>
   </div>

   <div class="registrations_form row">
    <label class="col-xs-3">メールアドレス</label>
    <div class="field col-xs-9">
      <%= f.email_field :email, autocomplete: "email" %>
    </div>
   </div>

   <div class="registrations_form row">
    <label class="col-xs-3">郵便番号(ハイフンなし)</label>
    <div class="field col-xs-9">
      <%= f.text_field :postal_code %>
    </div>
   </div>

   <div class="registrations_form row">
    <label class="col-xs-3">住所</label>
    <div class="field col-xs-9">
      <%= f.text_field :address %>
    </div>
   </div>

   <div class="registrations_form row">
    <label class="col-xs-3">電話番号(ハイフンなし)</label>
    <div class="field col-xs-9">
      <%= f.text_field :telephone_number %>
    </div>
   </div>

   <div class="registrations_form row">
    <label class="col-xs-3">パスワード(6文字以上)</label>
    <div class="field col-xs-9">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
   </div>

   <div class="registrations_form row">
    <label class="col-xs-3">パスワード(確認用)</label>
    <div class="field col-xs-9">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
   </div>


    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success center-block" %>
    </div>
  <% end %>

  <h2>既に登録済みの方</h2>
  <p>
    <%= link_to "こちら", new_customer_session_path %>からログインしてください。
  </p>

  <%= render "public/shared/links" %>
</div>