<div class="container">

    <h3><span class="label label-default">登録情報編集</span></span></h1>

    <%= form_with model:@customer, url: customers_path, method: :patch, id: 'new_customer', class: 'new_customer', local: true do |f| %>

       <div class="registrations_form row">
        <label class="col-xs-3">名前</label>
        <div class="field col-xs-9">
          <label>(姓)</label>
          <%= f.text_field :last_name, autofocus: true  %>
          <label class="first_name_label">(名)</label>
          <%= f.text_field :first_name %>
        </div>
       </div>

       <div class="registrations_form row">
        <label class="col-xs-3">フリガナ</label>
        <div class="field col-xs-9">
          <label>(セイ)</label>
          <%= f.text_field :last_name_kana %>
          <label class="first_name_label">(メイ)</label>
          <%= f.text_field :first_name_kana %>
        </div>
       </div>

       <div class="registrations_form row">
        <label class="col-xs-3">メールアドレス</label>
        <div class="field col-xs-9">
          <%= f.email_field :email, autocomplete: "email" %>
        </div>
       </div>

       <div class="registrations_form row">
        <label class="col-xs-3">郵便番号(ハイフンなし)</label>
        <div class="field col-xs-9">
          <%= f.text_field :postal_code %>
        </div>
       </div>

       <div class="registrations_form row">
        <label class="col-xs-3">住所</label>
        <div class="field col-xs-9">
          <%= f.text_field :address %>
        </div>
       </div>

       <div class="registrations_form row">
        <label class="col-xs-3">電話番号(ハイフンなし)</label>
        <div class="field col-xs-9">
          <%= f.text_field :telephone_number %>
        </div>
       </div>


        <div class="actions">
          <%= f.submit "変更内容を保存する", class: "btn btn-success center-block" %>
        </div>
      <% end %>

      <div>
        <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-danger" %>
      </div>
  </div>
